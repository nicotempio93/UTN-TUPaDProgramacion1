#3
num1 = int(input("Ingrese un numero: "))
num2 = int(input("Ingrese otro numero: "))

suma = 0

if num1 < num2:
    for i in range(num1, num2 + 1):
        suma = suma + i
else:
    for i in range(num2, num1 + 1):
        suma += i
print("La sumatoria de todos los numeros entre" , num1, "y", num2, "es:", suma)

#4
num1 = int(input("Ingrese un numero: "))
corte = 0
sumatoria = 0

while num1 != corte:
    sumatoria += num1
    num1 = int(input("Ingrese otro numero: (0 para cortar): "))
print("La sumatoria es: ", sumatoria)

#5
import random

numAleatorio = random.randint(0, 20)
contIntentos = 0
numDelUser = int(input("Adivina el número miesterioso(de 0 a 20): "))

while numDelUser != numAleatorio:
    contIntentos += 1
    numDelUser = int(input("Número incorrecto, prueba otra vez: "))

print(f"¡Has adivinado el número! Era el {numAleatorio}. Lo has conseguido en {contIntentos} intentos.")

#6
for i in range (100, -1, -1):
    if i % 2 == 0:
        print(i)

#7
num = int(input("Ingrese un numero entero positivo: "))
sumatoria = 0

if num <= 0:
    print("El numero debe ser positivo")
else:
    for i in range (1, num + 1):
        sumatoria += i

print("La sumatoria desde 1 hasta", num, "es:", sumatoria)

#8
cantidadDeNumeros = 20
pares = 0
impares = 0
positivos = 0
negativos = 0

for i in range(cantidadDeNumeros):
    numero = int(input("Ingrese un numero: "))
    if numero % 2 == 0:
        pares += 1
    else:
        impares += 1
    if numero > 0:
        positivos += 1
    elif numero < 0:
        negativos += 1
print("Cantidad de numeros pares:", pares)
print("Cantidad de numeros impares:", impares)
print("Cantidad de numeros positivos:", positivos)
print("Cantidad de numeros negativos:", negativos)

#9
cantidadDeNumero = 100
sumatoria = 0
media = 0
for i in range(cantidadDeNumero):
    numero = int(input("Ingrese un numero: "))
    sumatoria += numero
media = float(sumatoria / cantidadDeNumero)
print(f"La media es: {media}")

#10
num = int(input("Ingrese un nuemero: "))

largo = len(str(num))
invertido = ""

for i in range(largo):
    invertido += str(num)[largo -1 - i]
print(invertido)